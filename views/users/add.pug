extends ../layout
block head
	link(rel='stylesheet', href='/stylesheets/standard-forms.css')
block content
	.container.login-form-container
		h2.mb-5 New user
		form(action='/users/login', method='POST')
			.form-group.mb
				input#input-username.form-control(name='username', type='text', aria-describedby='usernameHelp', placeholder='Enter username')
			.form-group
				select#select-role.form-control
			button.mt-5.btn.btn-dark(type='submit') Submit